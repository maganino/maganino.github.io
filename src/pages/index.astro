     - GSAP animations with different effects per section
     - Bio toggle functionality
     ============================================ -->
<script>
  import { gsap } from 'gsap'
  import { ScrollTrigger } from 'gsap/ScrollTrigger'
  
  gsap.registerPlugin(ScrollTrigger)
  
  // ============================================
  // HERO ANIMATION (fade in + slide up)
  // ============================================
  gsap.from('.hero-content', {
    opacity: 0,
    y: 60,
    duration: 1.2,
    ease: 'power3.out'
  })
  
  // ============================================
  // SCROLL-TRIGGERED ANIMATIONS
  // Different effects for variety
  // ============================================
  const sections = gsap.utils.toArray('.animate-section')
  
  sections.forEach((section, index) => {
    // Alternate between different animation styles
    const animationType = index % 3
    
    let animationProps = {
      opacity: 1,
      y: 0,
      duration: 0.8,
      ease: 'power3.out'
    }
    
    // Add variety based on index
    if (animationType === 1) {
      // Slide from left
      gsap.set(section as Element, { x: -30 })
      animationProps = { ...animationProps, x: 0 } as any
    } else if (animationType === 2) {
      // Slide from right
      gsap.set(section as Element, { x: 30 })
      animationProps = { ...animationProps, x: 0 } as any
    }
    
    gsap.to(section as Element, {
      ...animationProps,
      scrollTrigger: {
        trigger: section as Element,
        start: 'top 85%',
        end: 'top 50%',
        toggleActions: 'play none none reverse'
      }
    })
  })
  
  // ============================================
  // BIO TOGGLE (Read More / Read Less)
  // ============================================
  const bioToggle = document.getElementById('bio-toggle')
  const bioShort = document.getElementById('bio-short')
  const bioExtended = document.getElementById('bio-extended')
  let bioExpanded = false
  
  bioToggle?.addEventListener('click', () => {
    bioExpanded = !bioExpanded
    
    if (bioExpanded) {
      bioExtended?.classList.remove('hidden')
      bioToggle.textContent = 'â† Read less'
    } else {
      bioExtended?.classList.add('hidden')
      bioToggle.textContent = 'Read more â†’'
    }
  })
</script>