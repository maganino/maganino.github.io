<!-- ============================================
     PAGE SCRIPTS
     - GSAP animations with different effects per section
     - Bio toggle functionality with smooth animation
     ============================================ -->
<script>
  import { gsap } from 'gsap'
  import { ScrollTrigger } from 'gsap/ScrollTrigger'

  gsap.registerPlugin(ScrollTrigger)

  // ============================================
  // HERO ANIMATION (fade in + slide up)
  // ============================================
  gsap.from('.hero-content', {
    opacity: 0,
    y: 60,
    duration: 1.2,
    ease: 'power3.out'
  })

  // ============================================
  // SCROLL-TRIGGERED ANIMATIONS
  // Different effects for variety
  // ============================================
  const sections = gsap.utils.toArray('.animate-section')

  sections.forEach((section, index) => {
    const animationType = index % 3

    let animationProps = {
      opacity: 1,
      y: 0,
      duration: 0.8,
      ease: 'power3.out'
    }

    if (animationType === 1) {
      gsap.set(section as Element, { x: -30 })
      animationProps = { ...animationProps, x: 0 } as any
    } else if (animationType === 2) {
      gsap.set(section as Element, { x: 30 })
      animationProps = { ...animationProps, x: 0 } as any
    }

    gsap.to(section as Element, {
      ...animationProps,
      scrollTrigger: {
        trigger: section as Element,
        start: 'top 85%',
        end: 'top 50%',
        toggleActions: 'play none none reverse'
      }
    })
  })

  // ============================================
  // BIO TOGGLE (Read More / Read Less) with smooth animation
  // ============================================
  const bioToggle = document.getElementById('bio-toggle')
  const bioExtended = document.getElementById('bio-extended')
  let bioExpanded = false

  bioToggle?.addEventListener('click', () => {
    bioExpanded = !bioExpanded

    if (bioExpanded) {
      bioExtended?.classList.add('expanded')
      bioToggle.textContent = '‚Üê Read less'
    } else {
      bioExtended?.classList.remove('expanded')
      bioToggle.textContent = 'Read more ‚Üí'
    }
  })

  // ============================================
  // REQUEST CV BUTTON (single dialog ‚Üí mailto)
  // ============================================
  const cvBtn = document.getElementById('request-cv-btn')
  cvBtn?.addEventListener('click', (e) => {
    e.preventDefault()
    const input = prompt('Please enter your name, email, and a short message (e.g. "Jane Doe, jane@company.com, Loved your talk at ECPLF!"):')
    if (!input) return
    const subject = encodeURIComponent('CV Request')
    const body = encodeURIComponent(`Hi Mina,\n\n${input}\n\nI would love to receive a copy of your CV.\n\nBest regards`)
    window.location.href = `mailto:mina.mas@hotmail.com?subject=${subject}&body=${body}`
  })
</script>
