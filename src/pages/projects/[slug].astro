---
/**
 * INDIVIDUAL PROJECT PAGE
 * Dynamic route: /projects/[slug]
 * 
 * Displays full project details with:
 * - Hero image
 * - Project metadata
 * - Full markdown content
 * - Tags and links
 */

import Layout from '../../layouts/Layout.astro'
import { getCollection } from 'astro:content'

export async function getStaticPaths() {
  const projects = await getCollection('projects')
  return projects.map(project => ({
    params: { slug: project.slug },
    props: { project }
  }))
}

const { project } = Astro.props
const { Content } = await project.render()

const drawings = {
  spiralsColorful: {
    light: '/images/drawings/inverted/spirals-colorful.png',
    dark: '/images/drawings/transparent/spirals-colorful.png'
  }
}

// Format dates
const startDate = new Date(project.data.startDate).toLocaleDateString('en-US', { 
  year: 'numeric', 
  month: 'long' 
})
const endDate = project.data.endDate 
  ? new Date(project.data.endDate).toLocaleDateString('en-US', { 
      year: 'numeric', 
      month: 'long' 
    })
  : 'Present'
---

<Layout title={`${project.data.title} | Mina Mounir`}>
  <main class="pt-24">
    
    <!-- ============================================
         HERO SECTION
         ============================================ -->
    <section class="py-16 px-6 relative overflow-hidden" style="background-color: var(--bg);">
      
      <!-- Background texture -->
      <img 
        src={drawings.spiralsColorful.dark}
        alt="" 
        class="absolute top-0 right-0 w-96 h-96 object-contain opacity-5 pointer-events-none only-dark"
        aria-hidden="true"
      />
      <img 
        src={drawings.spiralsColorful.light}
        alt="" 
        class="absolute top-0 right-0 w-96 h-96 object-contain opacity-5 pointer-events-none only-light"
        aria-hidden="true"
      />
      
      <div class="max-w-4xl mx-auto relative z-10">
        
        {/* Back Button */}
        <a 
          href="/projects" 
          class="inline-flex items-center gap-2 mb-8 text-sm font-medium transition-all hover:gap-3"
          style="color: var(--accent-primary);"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
          Back to Projects
        </a>
        
        {/* Category Badge */}
        <div class="mb-4">
          <span class="px-4 py-2 rounded-full text-sm font-medium" style="background-color: var(--surface); color: var(--accent-primary);">
            {project.data.category}
          </span>
          {project.data.featured && (
            <span class="ml-2 px-4 py-2 rounded-full text-sm font-bold" style="background-color: var(--accent-secondary); color: white;">
              Featured
            </span>
          )}
        </div>
        
        {/* Title */}
        <h1 class="font-chalk text-5xl md:text-7xl font-bold mb-6" style="color: var(--text);">
          {project.data.title}
        </h1>
        
        {/* Description */}
        <p class="text-xl mb-8" style="color: var(--muted);">
          {project.data.description}
        </p>
        
        {/* Metadata Grid */}
        <div class="grid md:grid-cols-2 gap-6 mb-8">
          <div>
            <p class="text-sm font-medium mb-1" style="color: var(--muted);">Timeline</p>
            <p class="text-lg" style="color: var(--text);">{startDate} â€” {endDate}</p>
          </div>
          
          {project.data.client && (
            <div>
              <p class="text-sm font-medium mb-1" style="color: var(--muted);">Client / Organization</p>
              <p class="text-lg" style="color: var(--text);">{project.data.client}</p>
            </div>
          )}
        </div>
        
        {/* Tags */}
        {project.data.tags && project.data.tags.length > 0 && (
          <div class="flex flex-wrap gap-2 mb-8">
            {project.data.tags.map((tag) => (
              <span class="px-3 py-1 rounded-full text-sm" style="background-color: var(--surface); color: var(--text);">
                {tag}
              </span>
            ))}
          </div>
        )}
        
        {/* External Link */}
        {project.data.link && (
          <a 
            href={project.data.link}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 px-6 py-3 rounded-full font-medium transition-all hover:scale-105"
            style="background-color: var(--accent-primary); color: white;"
          >
            Visit Project
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
            </svg>
          </a>
        )}
      </div>
    </section>

    <!-- ============================================
         PROJECT IMAGE
         ============================================ -->
    {project.data.image && (
      <section class="px-6 py-8" style="background-color: var(--surface);">
        <div class="max-w-5xl mx-auto">
          <img 
            src={project.data.image} 
            alt={project.data.title}
            class="w-full rounded-2xl shadow-2xl"
          />
        </div>
      </section>
    )}

    <!-- ============================================
         PROJECT CONTENT (Markdown)
         ============================================ -->
    <section class="py-16 px-6" style="background-color: var(--bg);">
      <div class="max-w-4xl mx-auto">
        <article class="prose prose-lg max-w-none project-content" style="color: var(--text);">
          <Content />
        </article>
      </div>
    </section>

    <!-- ============================================
         BACK TO PROJECTS
         ============================================ -->
    <section class="py-8 px-6 text-center" style="background-color: var(--surface);">
      <a 
        href="/projects"
        class="inline-flex items-center gap-2 px-8 py-4 rounded-full font-medium text-lg transition-all hover:scale-105"
        style="background-color: var(--accent-primary); color: white;"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
        View All Projects
      </a>
    </section>
    
  </main>
</Layout>

<!-- ============================================
     CONTENT STYLING
     ============================================ -->
<style>
  /* Style the markdown content */
  .project-content :global(h2) {
    font-family: 'Caveat', cursive;
    font-size: 2.5rem;
    font-weight: bold;
    margin-top: 2rem;
    margin-bottom: 1rem;
    color: var(--text);
  }
  
  .project-content :global(h3) {
    font-family: 'Caveat', cursive;
    font-size: 2rem;
    font-weight: bold;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
    color: var(--accent-primary);
  }
  
  .project-content :global(p) {
    margin-bottom: 1rem;
    line-height: 1.7;
    color: var(--text);
  }
  
  .project-content :global(ul) {
    margin-bottom: 1rem;
    padding-left: 1.5rem;
  }
  
  .project-content :global(li) {
    margin-bottom: 0.5rem;
    color: var(--text);
  }
  
  .project-content :global(strong) {
    color: var(--accent-primary);
    font-weight: 600;
  }
  
  .project-content :global(img) {
    border-radius: 1rem;
    margin: 2rem auto;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
  }
  
  .project-content :global(a) {
    color: var(--accent-primary);
    text-decoration: underline;
    transition: opacity 0.2s;
  }
  
  .project-content :global(a:hover) {
    opacity: 0.8;
  }
</style>
