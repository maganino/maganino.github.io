---
/**
 * Navigation Component
 * - Fixed top bar with logo, nav links, social icons
 * - Theme toggle switch (dark/light)
 * - Responsive mobile menu
 * - Scroll-synced active link highlighting on homepage
 * - All nav links scroll to homepage sections (consistent behavior)
 */

// Detect if we're on the homepage
const isHome = Astro.url.pathname === '/' || Astro.url.pathname === ''
const homePrefix = isHome ? '' : '/'
---

<nav id="main-nav" class="fixed top-0 left-0 right-0 z-50 transition-all duration-300" style="background-color: transparent;">
    <div class="max-w-6xl mx-auto px-6 py-4">
      <div class="flex items-center justify-between">

        <!-- ============================================
             LOGO / NAME
             ============================================ -->
        <a href="/" class="nav-logo flex items-center gap-2 font-chalk text-2xl font-bold" style="color: var(--text);" aria-label="Home">
          <svg class="w-5 h-5" style="color: var(--accent-primary);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
          </svg>
          <span>Nino</span>
        </a>

        <!-- ============================================
             NAVIGATION LINKS (Desktop)
             All links point to homepage sections
             ============================================ -->
        <div class="hidden md:flex items-center gap-8">
          <a href={`${homePrefix}#about`} class="nav-link text-sm font-medium transition-colors hover:opacity-80" data-section="about" style="color: var(--text);">About</a>

          <!-- Work with dropdown -->
          <div class="nav-dropdown-wrapper relative">
            <a href={`${homePrefix}#work`} class="nav-link text-sm font-medium transition-colors hover:opacity-80 inline-flex items-center gap-1" data-section="work" style="color: var(--text);">
              Work
              <svg class="w-3 h-3 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
              </svg>
            </a>
            <div class="nav-dropdown absolute top-full left-1/2 -translate-x-1/2 pt-2 opacity-0 invisible transition-all duration-200">
              <div class="rounded-xl shadow-xl py-2 px-1 min-w-[160px]" style="background-color: var(--surface); border: 1px solid var(--muted); border-opacity: 0.2;">
                <a href="/projects" class="block px-4 py-2 text-sm rounded-lg transition-colors hover:opacity-80" style="color: var(--text);">
                  Projects
                </a>
                <a href="/publications" class="block px-4 py-2 text-sm rounded-lg transition-colors hover:opacity-80" style="color: var(--text);">
                  Publications
                </a>
              </div>
            </div>
          </div>

          <a href={`${homePrefix}#blog`} class="nav-link text-sm font-medium transition-colors hover:opacity-80" data-section="blog" style="color: var(--text);">Blog</a>
          <a href={`${homePrefix}#contact`} class="nav-link text-sm font-medium transition-colors hover:opacity-80" data-section="contact" style="color: var(--text);">Contact</a>
        </div>

        <!-- ============================================
             SOCIAL ICONS + THEME TOGGLE
             ============================================ -->
        <div class="flex items-center gap-4">
          <!-- LinkedIn -->
          <a href="https://linkedin.com/in/minamounirshehata/" target="_blank" class="hover:scale-110 transition-transform" aria-label="LinkedIn">
            <svg class="w-5 h-5" style="color: var(--muted);" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>

          <!-- Email -->
          <a href="mailto:mina.mas@hotmail.com" class="hover:scale-110 transition-transform" aria-label="Email">
            <svg class="w-5 h-5" style="color: var(--muted);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
          </a>

          <!-- Phone -->
          <a href="tel:+32478262955" class="hover:scale-110 transition-transform" aria-label="Phone">
            <svg class="w-5 h-5" style="color: var(--muted);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
          </a>

          <!-- Divider -->
          <div class="w-px h-6" style="background-color: var(--muted); opacity: 0.3;"></div>

          <!-- Theme Toggle Switch -->
          <button
            id="theme-toggle"
            class="theme-switch"
            aria-label="Toggle theme"
          >
            <span class="theme-switch-track">
              <span class="theme-switch-thumb"></span>
            </span>
          </button>

          <!-- Mobile Menu Button -->
          <button id="mobile-menu-btn" class="md:hidden p-2" aria-label="Menu">
            <svg class="w-6 h-6" style="color: var(--text);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
            </svg>
          </button>
        </div>
      </div>

      <!-- ============================================
           MOBILE MENU
           ============================================ -->
      <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4">
        <div class="flex flex-col gap-4">
          <a href={`${homePrefix}#about`} class="nav-link-mobile text-sm font-medium" data-section="about" style="color: var(--text);">About</a>
          <a href={`${homePrefix}#work`} class="nav-link-mobile text-sm font-medium" data-section="work" style="color: var(--text);">Work</a>
          <a href={`${homePrefix}#blog`} class="nav-link-mobile text-sm font-medium" data-section="blog" style="color: var(--text);">Blog</a>
          <a href={`${homePrefix}#contact`} class="nav-link-mobile text-sm font-medium" data-section="contact" style="color: var(--text);">Contact</a>
        </div>
      </div>
    </div>
  </nav>

  <script>
    // Mobile menu toggle
    const mobileMenuBtn = document.getElementById('mobile-menu-btn');
    const mobileMenu = document.getElementById('mobile-menu');

    mobileMenuBtn?.addEventListener('click', () => {
      mobileMenu?.classList.toggle('hidden');
    });

    // Close mobile menu when a link is clicked
    mobileMenu?.querySelectorAll('a').forEach(link => {
      link.addEventListener('click', () => {
        mobileMenu.classList.add('hidden');
      });
    });

    // Navbar background on scroll
    const nav = document.getElementById('main-nav');
    window.addEventListener('scroll', () => {
      if (window.scrollY > 50) {
        nav?.classList.add('nav-scrolled');
        nav?.removeAttribute('style');
      } else {
        nav?.classList.remove('nav-scrolled');
        nav?.setAttribute('style', 'background-color: transparent;');
      }
    });

    // ============================================
    // SCROLL-SYNCED ACTIVE NAV LINK (homepage only)
    // ============================================
    const isHomePage = window.location.pathname === '/' || window.location.pathname === ''
    const navLinks = document.querySelectorAll('.nav-link')

    if (isHomePage) {
      const sectionIds = ['hero', 'i-dia', 'about', 'work', 'blog', 'contact']

      function updateActiveLink() {
        const scrollPosition = window.scrollY + 150

        let currentSection = ''
        for (const sectionId of sectionIds) {
          const el = document.getElementById(sectionId)
          if (el && el.offsetTop <= scrollPosition) {
            currentSection = sectionId
          }
        }

        navLinks.forEach(link => {
          const linkSection = link.getAttribute('data-section')
          if (linkSection === currentSection) {
            link.classList.add('active')
          } else {
            link.classList.remove('active')
          }
        })
      }

      window.addEventListener('scroll', updateActiveLink)
      updateActiveLink()

      // ============================================
      // SMOOTH SCROLL to sections on nav click
      // ============================================
      document.querySelectorAll('.nav-link, .nav-link-mobile').forEach(link => {
        link.addEventListener('click', (e) => {
          const href = link.getAttribute('href')
          if (href && href.startsWith('#')) {
            e.preventDefault()
            const target = document.getElementById(href.substring(1))
            if (target) {
              target.scrollIntoView({ behavior: 'smooth', block: 'start' })
            }
          }
        })
      })
    }
  </script>
